{
  "manifest_version": 3,
  "name": "Profile and Tabs Manager",
  "version": "1.0",
  "description": "Manage Chrome profiles, tabs, and save pages offline with a configurable server port.",
  "permissions": [
    "tabs",
    "windows",
    "pageCapture",
    "storage",
    "nativeMessaging",
    "notifications"
  ],
  "host_permissions": [
    "http://localhost:*/*"
  ],
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}